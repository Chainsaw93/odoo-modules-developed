<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_move_line_form_serial_validation" model="ir.ui.view">
        <field name="name">stock.move.line.form.serial.validation</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="attributes">
                <attribute name="widget">serial_validation_field</attribute>
            </xpath>
        </field>
    </record>
    
    <record id="stock_move_line_tree_serial_validation" model="ir.ui.view">
        <field name="name">stock.move.line.tree.serial.validation</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="attributes">
                <attribute name="widget">serial_validation_field</attribute>
            </xpath>
        </field>
    </record>
</odoo>