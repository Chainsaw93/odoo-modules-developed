<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_form_serial_validation" model="ir.ui.view">
        <field name="name">stock.picking.form.serial.validation</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_line_ids']" position="attributes">
                <attribute name="context">{
                    'default_picking_id': id,
                    'default_company_id': company_id,
                    'operation_type': picking_type_id and picking_type_id.code
                }</attribute>
            </xpath>
        </field>
    </record>
</odoo>