<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario para stock.picking -->
        <record id="view_picking_form_responsable" model="ir.ui.view">
            <field name="name">stock.picking.form.responsable</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_dest_id' and @groups='stock.group_stock_multi_locations']" position="after">
                    <field name="responsable_validacion" 
                           invisible="state != 'done'"
                           readonly="1"/>
                </xpath>
            </field>
        </record>
        
        <!-- Vista de lista para stock.picking -->
        <record id="view_picking_tree_responsable" model="ir.ui.view">
            <field name="name">stock.picking.tree.responsable</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="responsable_validacion" optional="hide"/>
                </xpath>
            </field>
        </record>
        
        <!-- Vista de bÃºsqueda para stock.picking  -->
        <record id="view_picking_search_responsable" model="ir.ui.view">
            <field name="name">stock.picking.search.responsable</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="responsable_validacion"/>
                </xpath>
                <xpath expr="//search" position="inside">
                    <filter string="Responsable" name="group_responsable" 
                            context="{'group_by': 'responsable_validacion'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>