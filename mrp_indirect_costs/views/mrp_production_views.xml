<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_mrp_production_form_inherit" model="ir.ui.view">
            <field name="name">mrp.production.form.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <!-- Agregar tab Costos indirectos al final -->
                <xpath expr="//notebook" position="inside">
                    <page name="indirect_costs" string="Costos indirectos">
                        <group>
                            <group>
                                <field name="landed_cost_id" readonly="1"/>
                                <button name="action_view_landed_cost" 
                                        string="Ver Costo en Destino" 
                                        type="object" 
                                        class="oe_link"
                                        invisible="not landed_cost_id"/>
                            </group>
                        </group>
                        <field name="production_cost_line_ids" readonly="state == 'done'" context="{'default_production_id': id}">
                            <list editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="product_id" 
                                    domain="['|', ('landed_cost_ok', '=', True), ('is_landed_cost_manufacturing', '=', True)]"
                                    options="{'no_create': True, 'no_edit': True}"/>
                                <field name="name"/>
                                <field name="price_unit"/>
                                <field name="currency_id" column_invisible="1"/>
                                <field name="split_method"/>
                                <field name="notes"/>
                                <field name="is_manufacturing_cost" column_invisible="1" string="Es costo específico de fabricación"/>
                                <field name="landed_cost_line_id" column_invisible="1"/>
                            </list>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>