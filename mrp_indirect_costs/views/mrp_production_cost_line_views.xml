<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista formulario para líneas de costo de producción -->
        <record id="view_mrp_production_cost_line_form" model="ir.ui.view">
            <field name="name">mrp.production.cost.line.form</field>
            <field name="model">mrp.production.cost.line</field>
            <field name="arch" type="xml">
                <form string="Línea de Costo Indirecto">
                    <sheet>
                        <group>
                            <group>
                                <field name="production_id" readonly="1"/>
                                <field name="sequence"/>
                                <field name="product_id" 
                                    domain="['|', ('landed_cost_ok', '=', True), ('is_landed_cost_manufacturing', '=', True)]"
                                    options="{'no_create': True, 'no_edit': True}"
                                    required="1"/>
                                <field name="name" required="1"/>
                            </group>
                            <group>
                                <field name="price_unit"/>
                                <field name="currency_id"/>
                                <field name="split_method"/>
                                <field name="account_id"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes" placeholder="Observaciones específicas para esta línea de costo..."/>
                        </group>
                        <group>
                            <group>
                                <field name="is_manufacturing_cost" readonly="1" string="Es costo específico de fabricación"/>
                                <field name="landed_cost_line_id" readonly="1" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista lista para líneas de costo de producción -->
        <record id="view_mrp_production_cost_line_tree" model="ir.ui.view">
            <field name="name">mrp.production.cost.line.tree</field>
            <field name="model">mrp.production.cost.line</field>
            <field name="arch" type="xml">
                <list string="Líneas de Costos Indirectos" default_order="sequence">
                    <field name="sequence" widget="handle"/>
                    <field name="production_id"/>
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="price_unit"/>
                    <field name="currency_id" optional="hide"/>
                    <field name="split_method"/>
                    <field name="is_manufacturing_cost"/>
                    <field name="notes" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Vista búsqueda para líneas de costo de producción -->
        <record id="view_mrp_production_cost_line_search" model="ir.ui.view">
            <field name="name">mrp.production.cost.line.search</field>
            <field name="model">mrp.production.cost.line</field>
            <field name="arch" type="xml">
                <search string="Buscar Líneas de Costos Indirectos">
                    <field name="production_id"/>
                    <field name="product_id"/>
                    <field name="name"/>
                    <separator/>
                    <filter name="manufacturing_costs" string="Costos de Fabricación" 
                            domain="[('is_manufacturing_cost', '=', True)]"/>
                    <filter name="manual_costs" string="Costos Manuales" 
                            domain="[('is_manufacturing_cost', '=', False)]"/>
                    <separator/>
                    <group expand="0" string="Agrupar por">
                        <filter name="group_production" string="Orden de Fabricación" 
                                context="{'group_by': 'production_id'}"/>
                        <filter name="group_product" string="Producto" 
                                context="{'group_by': 'product_id'}"/>
                        <filter name="group_split_method" string="Método de División" 
                                context="{'group_by': 'split_method'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Acción para las líneas de costo de producción -->
        <record id="action_mrp_production_cost_line" model="ir.actions.act_window">
            <field name="name">Líneas de Costos Indirectos</field>
            <field name="res_model">mrp.production.cost.line</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_mrp_production_cost_line_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Crea tu primera línea de costo indirecto!
                </p>
                <p>
                    Las líneas de costos indirectos permiten asignar costos adicionales 
                    a las órdenes de fabricación de manera controlada y trazable.
                </p>
            </field>
        </record>

    </data>
</odoo>