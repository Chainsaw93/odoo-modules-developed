<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_conduce" model="report.paperformat">
        <field name="name">Conduce Format</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>        
        <field name="margin_bottom">10</field>     
        <field name="margin_left">10</field>       
        <field name="margin_right">10</field>      
        <field name="header_line" eval="False"/>
        <field name="header_spacing">5</field>     
        <field name="dpi">90</field>
        <field name="disable_shrinking" eval="True"/>
    </record>
    <record id="action_report_conduce" model="ir.actions.report">
        <field name="name">Conduce</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">stock_picking_conduce_report.report_conduce_document</field>
        <field name="report_file">stock_picking_conduce_report.report_conduce_document</field>
        <field name="paperformat_id" ref="paperformat_conduce"/>
        <field name="print_report_name">'Conduce - %s' % object.name</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
        <field name="attachment_use" eval="False"/>
    </record>
</odoo>