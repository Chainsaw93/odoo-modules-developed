<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Create custom barcode operations view -->
    <record id="stock_picking_barcode_operations_view" model="ir.ui.view">
        <field name="name">stock.picking.barcode.operations.extended</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <kanban class="o_barcode_operations_kanban" default_group_by="state">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="origin"/>
                <field name="orden_compra"/>
                <field name="state"/>
                <field name="scheduled_date"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_barcode_operation_card">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle text-muted">
                                        <field name="partner_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_state">
                                    <span class="badge" t-attf-class="badge-{{record.state.raw_value === 'done' ? 'success' : 'primary'}}">
                                        <field name="state"/>
                                    </span>
                                </div>
                            </div>
                            
                            <!-- Custom fields section -->
                            <div class="o_barcode_operation_details">
                                <div class="o_barcode_detail_row" t-if="record.origin.value">
                                    <span class="o_barcode_detail_label">Doc. origen:</span>
                                    <span class="o_barcode_detail_value">
                                        <field name="origin"/>
                                    </span>
                                </div>
                                <div class="o_barcode_detail_row" t-if="record.orden_compra.value">
                                    <span class="o_barcode_detail_label">OC:</span>
                                    <span class="o_barcode_detail_value">
                                        <field name="orden_compra"/>
                                    </span>
                                </div>
                            </div>
                            
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="scheduled_date" widget="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span class="fa fa-clock-o" aria-label="Scheduled"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Extend standard stock picking kanban for barcode operations -->
    <record id="stock_picking_kanban_inherit_barcode" model="ir.ui.view">
        <field name="name">stock.picking.kanban.barcode.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.stock_picking_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_properties']" position="after">
                <div class="o_barcode_operation_info mt-1">
                    <div class="o_barcode_info_item d-flex" t-if="record.origin.value">
                        <small class="text-muted me-1">Doc. origen:</small>
                        <field name="origin" class="text-truncate"/>
                    </div>
                    <div class="o_barcode_info_item d-flex" t-if="record.orden_compra.value">
                        <small class="text-muted me-1">OC:</small>
                        <field name="orden_compra" class="text-truncate"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Extend stock picking form view for barcode operations -->
    <record id="stock_picking_form_inherit_barcode" model="ir.ui.view">
        <field name="name">stock.picking.form.barcode.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_assign']" position="before">
                <div class="o_barcode_operations_header" groups="stock.group_stock_user">
                    <div class="o_barcode_info_container">
                        <div class="o_barcode_info_field" invisible="not origin">
                            <span class="o_form_label">Doc. origen:</span>
                            <span class="o_barcode_info_content"><field name="origin" readonly="1"/></span>
                        </div>
                        <div class="o_barcode_info_field" invisible="not orden_compra">
                            <span class="o_form_label">OC:</span>
                            <span class="o_barcode_info_content"><field name="orden_compra" readonly="1"/></span>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>