<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="hr_provision_tree_view" model="ir.ui.view">
        <field name="name">hr.provision.tree.view</field>
        <field name="model">hr.x.provision.record</field>
        <field name="arch" type="xml">
            <list string="Provisions"
                  decoration-info="state == 'pending'"
                  decoration-muted="state == 'paid'"
                  decoration-danger="state == 'cancelled'"
                  sample="1">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="provision_date"/>
                <field name="provision_amount"/>
                <field name="provision_type"/>
                <field name="company_id" column_invisible="True"/>
                <field name="contract_id" column_invisible="True"/>
                <field name="create_date" optional="hide"/>
                <field name="create_uid" optional="hide"/>
                <field name="description" column_invisible="True"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="hr_provision_form_view" model="ir.ui.view">
        <field name="name">hr.provision.form.view</field>
        <field name="model">hr.x.provision.record</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" 
                            name="set_paid" 
                            class="btn btn-primary" 
                            string="Mark as Paid"
                            invisible="state != 'pending'" 
                            confirm="This action will register this provision as paid. Are you sure?" 
                            groups="hr_payroll.group_hr_payroll_manager"/>
                    <button type="object" 
                            name="set_cancelled" 
                            class="btn btn-warning" 
                            string="Cancel"
                            invisible="state != 'pending'" 
                            confirm="This action will cancel the provision and cannot be reversed. Are you sure?" 
                            groups="hr_payroll.group_hr_payroll_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,paid,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <field name="name" required="True" readonly="1"/>
                    </div>
                    <group>
                        <group string="Provision Details">
                            <field name="contract_id"
                                   options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                            <field name="provision_type"/>
                            <field name="provision_date"/>
                            <field name="provision_amount"/>
                        </group>
                        <group string="Employee Information">
                            <field name="employee_id"
                                   options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                            <field name="company_id" required="1" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="create_uid" readonly="1"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Additional notes about this provision..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="hr_provision_pivot" model="ir.ui.view">
        <field name="name">hr_provision_pivot</field>
        <field name="model">hr.x.provision.record</field>
        <field name="arch" type="xml">
            <pivot string="Provision Analysis" sample="1">
                <field name="employee_id" type="row"/>
                <field name="state" type="row"/>
                <field name="provision_type" type="col"/>
                <field name="provision_date" type="col" interval="month"/>
                <field name="provision_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="hr_provision_graph_view" model="ir.ui.view">
        <field name="name">hr_provision_graph_view</field>
        <field name="model">hr.x.provision.record</field>
        <field name="arch" type="xml">
            <graph string="Provision Analysis" 
                   type="bar" 
                   sample="1" 
                   disable_linking="1">
                <field name="employee_id" type="col"/>
                <field name="provision_type" type="col"/>
                <field name="provision_date" type="row" interval="year"/>
                <field name="provision_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Search View -->
    <record id="hr_provision_search" model="ir.ui.view">
        <field name="name">hr_provision_search</field>
        <field name="model">hr.x.provision.record</field>
        <field name="arch" type="xml">
            <search string="Search Provisions">
                <field name="name" string="Reference"/>
                <field name="provision_type" string="Type"/>
                <field name="employee_id" string="Employee"/>
                <field name="provision_date" string="Date"/>
                <field name="state" string="State"/>
                <separator/>
                <filter name="type_xiii" string="XIII" domain="[('provision_type','=','xiii')]"/>
                <filter name="type_rf" string="Reserve Funds" domain="[('provision_type','=','rf')]"/>
                <separator/>
                <filter name="state_pending" string="Pending" domain="[('state','=','pending')]"/>
                <filter name="state_paid" string="Paid" domain="[('state','=','paid')]"/>
                <separator/>
                <filter name="current_year" string="Current Year" 
                        domain="[('provision_date','&gt;=', (context_today() + relativedelta(day=1, month=1)).strftime('%Y-%m-%d')),
                                 ('provision_date','&lt;=', (context_today() + relativedelta(day=31, month=12)).strftime('%Y-%m-%d'))]"/>
                <group expand="1" string="Group By">
                    <filter name='group_by_provision_date' string="Provision Date"
                            context="{'group_by':'provision_date:month'}"/>
                    <filter name='group_by_employee' string="Employee" 
                            context="{'group_by':'employee_id'}"/>
                    <filter name='group_by_provision_type' string="Provision Type"
                            context="{'group_by':'provision_type'}"/>
                    <filter name='group_by_provision_state' string="State" 
                            context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="hr_provision_action" model="ir.actions.act_window">
        <field name="name">Provision Management</field>
        <field name="res_model">hr.x.provision.record</field>
        <field name="context">{
            'search_default_group_by_provision_type': 1,
            'search_default_state_pending': 1
        }</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first provision record!
            </p>
            <p>
                Manage XIII provisions for your employees.
                Track pending and paid provisions for better payroll management.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="hr_provision_menu"
              action="hr_provision_action"
              parent="hr_payroll.menu_hr_payroll_global_settings"
              groups="hr_payroll.group_hr_payroll_manager"
              sequence="12"
              name="Provision Management"/>
</odoo>