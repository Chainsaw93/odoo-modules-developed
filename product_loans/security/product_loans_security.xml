<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Grupos de seguridad -->
        <record id="group_loan_user" model="res.groups">
            <field name="name">Préstamos: Usuario</field>
            <field name="category_id" ref="base.module_category_inventory_inventory"/>
            <field name="comment">Permite crear y gestionar préstamos básicos</field>
        </record>

        <record id="group_loan_manager" model="res.groups">
            <field name="name">Préstamos: Administrador</field>
            <field name="category_id" ref="base.module_category_inventory_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_loan_user'))]"/>
            <field name="comment">Acceso completo a gestión de préstamos y configuraciones</field>
        </record>

        <record id="group_loan_accountant" model="res.groups">
            <field name="name">Préstamos: Contabilidad</field>
            <field name="category_id" ref="base.module_category_inventory_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_loan_user'))]"/>
            <field name="comment">Acceso a funciones contables de préstamos</field>
        </record>

        <!-- Reglas de acceso a registros -->
        <record id="loan_tracking_partner_rule" model="ir.rule">
            <field name="name">Loan Tracking: Partner Access</field>
            <field name="model_id" ref="model_loan_tracking_detail"/>
            <field name="domain_force">[('partner_id', 'child_of', [user.partner_id.commercial_partner_id.id])]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>