<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista formulario del wizard de devolución -->
    <record id="view_loan_return_wizard_form" model="ir.ui.view">
        <field name="name">loan.return.wizard.form</field>
        <field name="model">loan.return.wizard</field>
        <field name="arch" type="xml">
            <form string="Devolver Préstamo">
                <sheet>
                    <div class="oe_title">
                        <h1>Devolución de Préstamo</h1>
                        <h2>
                            <field name="picking_id" readonly="1" options="{'no_open': True}"/>
                        </h2>
                    </div>

                    <group>
                        <group>
                            <field name="return_date"/>
                            <field name="return_location_id" 
                                   options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="notes" placeholder="Notas opcionales sobre la devolución..."/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Productos a Devolver" name="products">
                            <field name="move_line_ids">
                                <list editable="bottom" string="Productos">
                                    <field name="product_id" readonly="1"/>
                                    <field name="original_qty" readonly="1"/>
                                    <field name="return_qty"/>
                                    <field name="product_uom_id" readonly="1"/>
                                </list>
                            </field>
                            <div class="alert alert-info" role="alert">
                                <strong>Información:</strong> Puedes modificar las cantidades a devolver. 
                                No es necesario devolver todos los productos si no están disponibles.
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_create_return" string="Crear Devolución"
                            type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>