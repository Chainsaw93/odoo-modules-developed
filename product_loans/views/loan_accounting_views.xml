<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista formulario de configuración contable -->
    <record id="view_loan_accounting_manager_form" model="ir.ui.view">
        <field name="name">loan.accounting.manager.form</field>
        <field name="model">loan.accounting.manager</field>
        <field name="arch" type="xml">
            <form string="Configuración Contable de Préstamos">
                <sheet>
                    <div class="oe_title">
                        <h1>Configuración Contable de Préstamos</h1>
                        <h2>
                            <field name="company_id" options="{'no_create': True}"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Cuentas Contables">
                            <field name="loan_commitment_account_id" 
                                   options="{'no_create': True, 'no_open': True}"
                                   context="{'default_account_type': 'liability_current'}"/>
                            <field name="loan_risk_account_id" 
                                   options="{'no_create': True, 'no_open': True}"
                                   context="{'default_account_type': 'expense'}"/>
                            <field name="loan_revenue_account_id" 
                                   options="{'no_create': True, 'no_open': True}"
                                   context="{'default_account_type': 'income'}"/>
                        </group>
                        <group string="Políticas Contables">
                            <field name="create_commitment_entries"/>
                            <field name="create_risk_entries"/>
                            <field name="risk_days_threshold" 
                                   invisible="not create_risk_entries"/>
                        </group>
                    </group>

                    <div class="alert alert-info" role="alert">
                        <h4>Configuración de Cuentas Contables:</h4>
                        <ul>
                            <li><strong>Cuenta de Compromisos:</strong> Registra el valor de productos prestados como compromiso</li>
                            <li><strong>Cuenta de Riesgo:</strong> Provisiona pérdidas potenciales por préstamos vencidos</li>
                            <li><strong>Cuenta de Ingresos:</strong> Registra diferencias positivas en conversiones a venta</li>
                        </ul>
                    </div>

                    <div class="alert alert-warning" 
                         invisible="create_commitment_entries and loan_commitment_account_id" 
                         role="alert">
                        <strong>Advertencia:</strong> Los asientos de compromiso están habilitados pero no se ha configurado la cuenta contable.
                    </div>

                    <div class="alert alert-warning" 
                         invisible="create_risk_entries and loan_risk_account_id" 
                         role="alert">
                        <strong>Advertencia:</strong> Los asientos de riesgo están habilitados pero no se ha configurado la cuenta contable.
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista lista de seguimiento de valoración -->
    <record id="view_loan_valuation_tracker_tree" model="ir.ui.view">
        <field name="name">loan.valuation.tracker.tree</field>
        <field name="model">loan.valuation.tracker</field>
        <field name="arch" type="xml">
            <list string="Seguimiento de Valoración" create="false">
                <field name="loan_date"/>
                <field name="picking_id"/>
                <field name="product_id"/>
                <field name="lot_id" optional="show"/>
                <field name="original_cost" sum="Total Costo Original"/>
                <field name="current_cost" sum="Total Costo Actual"/>
                <field name="valuation_difference" sum="Total Diferencia" 
                       decoration-success="valuation_difference > 0"
                       decoration-danger="valuation_difference &lt; 0"/>
                <field name="is_resolved"/>
                <field name="resolution_type" optional="show"/>
                <field name="final_cost" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario de seguimiento de valoración -->
    <record id="view_loan_valuation_tracker_form" model="ir.ui.view">
        <field name="name">loan.valuation.tracker.form</field>
        <field name="model">loan.valuation.tracker</field>
        <field name="arch" type="xml">
            <form string="Seguimiento de Valoración" create="false" edit="false">
                <header>
                    <field name="is_resolved" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="product_id" readonly="1"/>
                        </h1>
                        <h2 invisible="not lot_id">
                            S/N: <field name="lot_id" readonly="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Información del Préstamo">
                            <field name="picking_id" readonly="1"/>
                            <field name="loan_date" readonly="1"/>
                        </group>
                        <group string="Valoración">
                            <field name="original_cost" readonly="1"/>
                            <field name="current_cost" readonly="1"/>
                            <field name="valuation_difference" readonly="1"
                                   decoration-success="valuation_difference > 0"
                                   decoration-danger="valuation_difference &lt; 0"/>
                        </group>
                    </group>

                    <group string="Resolución" invisible="not is_resolved">
                        <group>
                            <field name="resolution_type" readonly="1"/>
                            <field name="final_cost" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista búsqueda de seguimiento de valoración -->
    <record id="view_loan_valuation_tracker_search" model="ir.ui.view">
        <field name="name">loan.valuation.tracker.search</field>
        <field name="model">loan.valuation.tracker</field>
        <field name="arch" type="xml">
            <search string="Buscar Valoración">
                <field name="picking_id"/>
                <field name="product_id"/>
                <field name="lot_id"/>
                
                <!-- Filtros -->
                <filter name="unresolved" string="No Resueltos" domain="[('is_resolved', '=', False)]"/>
                <filter name="resolved" string="Resueltos" domain="[('is_resolved', '=', True)]"/>
                <filter name="positive_difference" string="Diferencia Positiva" 
                        domain="[('valuation_difference', '>', 0)]"/>
                <filter name="negative_difference" string="Diferencia Negativa" 
                        domain="[('valuation_difference', '&lt;', 0)]"/>
                <filter name="significant_difference" string="Diferencia Significativa" 
                        domain="['|', ('valuation_difference', '>', 10), ('valuation_difference', '&lt;', -10)]"/>

                <!-- Agrupaciones -->
                <group expand="0" string="Agrupar por">
                    <filter name="group_by_product" string="Producto" context="{'group_by': 'product_id'}"/>
                    <filter name="group_by_picking" string="Préstamo" context="{'group_by': 'picking_id'}"/>
                    <filter name="group_by_resolution" string="Tipo Resolución" context="{'group_by': 'resolution_type'}"/>
                    <filter name="group_by_loan_date" string="Fecha Préstamo" context="{'group_by': 'loan_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista de asientos contables relacionados con préstamos -->
    <record id="view_account_move_loan_tree" model="ir.ui.view">
        <field name="name">account.move.loan.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="loan_picking_id" string="Préstamo" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Vista formulario de asientos con información de préstamos -->
    <record id="view_account_move_loan_form" model="ir.ui.view">
        <field name="name">account.move.loan.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="loan_picking_id" readonly="1" invisible="not is_loan_entry"/>
                <field name="is_loan_entry" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Vista de stock.picking con información contable -->
    <record id="view_picking_form_accounting_info" model="ir.ui.view">
        <field name="name">stock.picking.form.accounting.info</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Botón para ver asientos contables -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_accounting_entries" 
                        type="object"
                        class="oe_stat_button" 
                        icon="fa-calculator"
                        invisible="not has_accounting_entries"
                        groups="account.group_account_user">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="has_accounting_entries"/>
                        </span>
                        <span class="o_stat_text">Asientos</span>
                    </div>
                </button>
            </xpath>

            <!-- Información contable en página adicional -->
            <xpath expr="//notebook" position="inside">
                <page string="Información Contable" name="accounting" 
                      invisible="not has_accounting_entries"
                      groups="account.group_account_user">
                    <group>
                        <field name="loan_accounting_move_ids" nolabel="1">
                            <list create="false" edit="false">
                                <field name="name"/>
                                <field name="date"/>
                                <field name="ref"/>
                                <field name="state"/>
                                <field name="amount_total"/>
                            </list>
                        </field>
                    </group>
                </page>
            </xpath>

            <!-- Campo invisible para computaciones -->
            <xpath expr="//field[@name='is_loan']" position="after">
                <field name="has_accounting_entries" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Dashboard de impacto de valoración -->
    <record id="view_valuation_impact_dashboard" model="ir.ui.view">
        <field name="name">loan.valuation.impact.dashboard</field>
        <field name="model">loan.valuation.tracker</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Impacto de Valoración de Préstamos">
                <field name="product_id" type="row"/>
                <field name="valuation_difference" type="measure"/>
                <field name="original_cost" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Acción para dashboard de valoración -->
    <record id="action_valuation_impact_analysis" model="ir.actions.act_window">
        <field name="name">Análisis de Impacto de Valoración</field>
        <field name="res_model">loan.valuation.tracker</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="domain">[('is_resolved', '=', False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay datos de valoración para analizar
            </p>
            <p>
                El análisis de valoración muestra las diferencias entre costos originales
                y actuales para préstamos no resueltos.
            </p>
        </field>
    </record>
</odoo>