<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista lista del reporte -->
    <record id="view_loan_report_tree" model="ir.ui.view">
        <field name="name">loan.report.tree</field>
        <field name="model">loan.report</field>
        <field name="arch" type="xml">
            <list string="Reporte de Préstamos" create="false" edit="false" delete="false">
                <field name="picking_id"/>
                <field name="partner_id"/>
                <field name="loaned_to_partner_id"/>
                <field name="product_id"/>
                <field name="product_qty"/>
                <field name="scheduled_date"/>
                <field name="date_done"/>
                <field name="loan_expected_return_date"/>
                <field name="days_overdue" decoration-danger="days_overdue &gt; 0"/>
                <field name="state" decoration-success="state == 'done'" decoration-info="state in ['waiting', 'confirmed', 'assigned']"/>
            </list>
        </field>
    </record>

    <!-- Vista gráfico del reporte -->
    <record id="view_loan_report_graph" model="ir.ui.view">
        <field name="name">loan.report.graph</field>
        <field name="model">loan.report</field>
        <field name="arch" type="xml">
            <graph string="Préstamos por Estado">
                <field name="state" type="row"/>
                <field name="product_qty" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vista pivot del reporte -->
    <record id="view_loan_report_pivot" model="ir.ui.view">
        <field name="name">loan.report.pivot</field>
        <field name="model">loan.report</field>
        <field name="arch" type="xml">
            <pivot string="Análisis de Préstamos">
                <field name="partner_id" type="row"/>
                <field name="state" type="col"/>
                <field name="product_qty" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Vista de búsqueda del reporte -->
    <record id="view_loan_report_search" model="ir.ui.view">
        <field name="name">loan.report.search</field>
        <field name="model">loan.report</field>
        <field name="arch" type="xml">
            <search string="Buscar en Reporte">
                <field name="picking_id"/>
                <field name="partner_id"/>
                <field name="loaned_to_partner_id"/>
                <field name="product_id"/>
                <field name="warehouse_id"/>
                
                <!-- Filtros -->
                <filter name="overdue" string="Vencidos" domain="[('days_overdue', '&gt;', 0)]"/>
                <filter name="active_loans" string="Préstamos Activos" domain="[('state', '=', 'done')]"/>
                <filter name="due_this_week" string="Vencen esta Semana" 
                        domain="[('loan_expected_return_date', '&lt;=', (context_today() + datetime.timedelta(days=7)).strftime('%Y-%m-%d')), ('loan_expected_return_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                        
                <separator/>
                
                <filter name="done" string="Realizados" domain="[('state', '=', 'done')]"/>
                <filter name="pending" string="Pendientes" domain="[('state', 'in', ['draft', 'waiting', 'confirmed', 'assigned'])]"/>

                <!-- Agrupaciones -->
                <group expand="0" string="Agrupar por">
                    <filter name="group_by_partner" string="Cliente" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_owner" string="Propietario" context="{'group_by': 'loaned_to_partner_id'}"/>
                    <filter name="group_by_product" string="Producto" context="{'group_by': 'product_id'}"/>
                    <filter name="group_by_state" string="Estado" context="{'group_by': 'state'}"/>
                    <filter name="group_by_warehouse" string="Almacén" context="{'group_by': 'warehouse_id'}"/>
                    <filter name="group_by_return_date" string="Fecha Devolución" context="{'group_by': 'loan_expected_return_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción del reporte -->
    <record id="action_loan_report" model="ir.actions.act_window">
        <field name="name">Reporte de Préstamos</field>
        <field name="res_model">loan.report</field>
        <field name="view_mode">list,graph,pivot</field>
        <field name="search_view_id" ref="view_loan_report_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay datos de préstamos para mostrar
            </p>
            <p>
                Este reporte muestra un análisis detallado de todos los préstamos
                registrados en el sistema, incluyendo información sobre vencimientos
                y estados actuales.
            </p>
        </field>
    </record>

    <!-- Dashboard simplificado con métricas -->
    <record id="view_loan_dashboard" model="ir.ui.view">
        <field name="name">loan.dashboard</field>
        <field name="model">loan.report</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" create="false" edit="false" delete="false">
                <field name="picking_id"/>
                <field name="partner_id"/>
                <field name="loaned_to_partner_id"/>
                <field name="product_id"/>
                <field name="days_overdue"/>
                <field name="state"/>
                <field name="loan_expected_return_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong><field name="picking_id"/></strong>
                                    </div>
                                    <div class="text-muted">
                                        Cliente: <field name="partner_id"/>
                                    </div>
                                    <div class="text-muted">
                                        Propietario: <field name="loaned_to_partner_id"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row mb-2">
                                    <div class="col-12">
                                        <strong>Producto:</strong> <field name="product_id"/>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-6">
                                        <span t-if="record.loan_expected_return_date.value">
                                            <strong>Vence:</strong> <field name="loan_expected_return_date"/>
                                        </span>
                                    </div>
                                    <div class="col-6 text-end">
                                        <span t-if="record.days_overdue.raw_value &gt; 0" 
                                              class="badge bg-danger">
                                            Vencido <field name="days_overdue"/> días
                                        </span>
                                        <span t-elif="record.days_overdue.raw_value == 0 and record.loan_expected_return_date.value" 
                                              class="badge bg-warning">
                                            Vence hoy
                                        </span>
                                        <span t-else="" 
                                              class="badge bg-success">
                                            Al día
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 text-center">
                                        <button class="btn btn-primary btn-sm" 
                                                type="object" 
                                                name="action_view_picking">
                                            Ver Préstamo
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>